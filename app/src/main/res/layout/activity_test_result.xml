<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        tools:context=".TestResult" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/tests"
            app:layout_constraintBottom_toTopOf="@+id/r1"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your Test Results"
            android:layout_marginTop="25sp"
            android:textColor="#F88181"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.714"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Spinner
            android:id="@+id/result1"
            android:layout_width="160dp"
            android:layout_height="65dp"
            android:background="@drawable/kar"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:layout_marginEnd="15dp"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/r"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/r1"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.596"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/result2"
            style="@style/ThemeOverlay.Material3.MaterialTimePicker.Display.TextInputEditText"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:background="@drawable/edit_shap"
            android:gravity="center"
            android:hint="Age"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.929"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <Spinner
            android:id="@+id/result3"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:background="@drawable/kar"
            android:gravity="center"
            android:hint="Weight"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toTopOf="@+id/r5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/r"
            app:layout_constraintTop_toBottomOf="@+id/r2"
            app:layout_constraintVertical_bias="0.44"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/result4"
            android:layout_width="160dp"
            android:layout_height="65dp"
            android:background="@drawable/kar"
            android:gravity="center"
            android:hint="Blood_Pressure"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/r5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/r"
            app:layout_constraintTop_toBottomOf="@+id/r2"
            app:layout_constraintVertical_bias="0.44"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Spinner
                android:id="@+id/result5"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:background="@drawable/kar"
                android:gravity="center"
                android:hint="Diabetes"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toTopOf="@+id/r5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toEndOf="@+id/r"
                app:layout_constraintTop_toBottomOf="@+id/r2"
                app:layout_constraintVertical_bias="0.44"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/result6"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:background="@drawable/edit_shap"
                android:gravity="center"
                android:hint="Hemoglobin"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                app:layout_constraintBottom_toTopOf="@+id/r3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.545"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/result7"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:background="@drawable/edit_shap"
            android:gravity="center"
            android:hint="HCV Test"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toTopOf="@+id/r5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/r"
            app:layout_constraintTop_toBottomOf="@+id/r2"
            app:layout_constraintVertical_bias="0.44"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/result8"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:background="@drawable/edit_shap"
            android:gravity="center"
            android:hint="HBsAb Test"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/r3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.545"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/done"
            android:layout_width="242dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btnedit"
            android:text="Done"

            android:textAlignment="center"
            android:textSize="16sp"
            app:backgroundTint="#F88181"
            android:layout_marginLeft="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.934"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>