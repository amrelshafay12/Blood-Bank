<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_blood"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".donorLocation">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_thumbs_up"/>

    <TextView
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Your account has been successfully created" />


    <TextView
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/location"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_placeholder"
        android:drawablePadding="4dp"
        android:text="Please Enter Your Location" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:drawablePadding="4dp"
            android:id="@+id/MarkLocation"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@drawable/btnedit"
            android:text="Put current Location"
            android:textAlignment="center"
            android:textSize="16sp"
            android:onClick="currentLocation"/>

        <Button
            android:id="@+id/MarkMyLocation"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/btnedit"
            android:drawablePadding="4dp"
            android:text="Put another location"
            android:textAlignment="center"
            android:onClick="anotherLocation"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/Ask"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textColor="#000C51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:onClick="ask"
        android:text="Why the application Need your Location?" />

</LinearLayout>