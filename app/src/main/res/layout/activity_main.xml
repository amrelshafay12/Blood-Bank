<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_blood"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/Medical_follow_up2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:background="@drawable/ic_testbanner"
        android:gravity="center_vertical|start"
        android:onClick="donor"
        android:paddingLeft="120dp"
        android:paddingTop="8dp"
        android:paddingRight="0dp"
        android:paddingBottom="8dp"
        android:text="Donor"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Medical_follow_up1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:background="@drawable/ic_testbanner"
        android:gravity="center_vertical|start"
        android:paddingLeft="120dp"
        android:paddingTop="8dp"
        android:paddingRight="0dp"
        android:paddingBottom="8dp"
        android:text="receptor"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal"
        android:onClick="receptor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Medical_follow_up2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Medical_follow_up22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:background="@drawable/ic_testbanner"
        android:gravity="center_vertical|start"
        android:paddingLeft="100dp"
        android:paddingTop="8dp"
        android:paddingRight="0dp"
        android:paddingBottom="8dp"
        android:text="To be healthy"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Medical_follow_up1"
        android:onClick="toBeHealthy"
        tools:ignore="MissingConstraints" />

</LinearLayout>