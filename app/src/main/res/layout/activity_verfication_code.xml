<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_blood"
    tools:context=".VerficationCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ph"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_shap"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:gravity="center"
            android:hint="Phone Number"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/send"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:background="@drawable/btnedit"
            android:text="Send Code"
            android:textAlignment="center"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/pn"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_shap"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:gravity="center"
            android:hint="Verification Code"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:layout_marginTop="44dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/generate"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:background="@drawable/btnedit"
            android:text="Verify"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/Ask"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textColor="#000C51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:onClick="num"
            android:text="Why the application Need your Phone Number?" />

    </LinearLayout>


</RelativeLayout>